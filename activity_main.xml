<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:scaleX="1.04"
            android:scaleY="1.04"
            app:srcCompat="@drawable/Topbar2" />

        <TextView
            android:id="@+id/bedtimeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your max bedtime is [bedtime]"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/setSleepTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Sleep Time"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sleepTimeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter hours"
                android:inputType="number"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/sleep" />

            <TextView
                android:id="@+id/sleepTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time to Sleep: --:--"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingStart="40dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/baseline_access_alarm_24" />

            <TextView
                android:id="@+id/wakeUpTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time to Wake Up: --:--"
                android:textSize="16sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/alarmToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</RelativeLayout>
